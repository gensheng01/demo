/* pages/scale_book/scale_book.wxss */
.image-wrap{
  width: 100%;
  height: 75vh;
  background: #f0f;
  overflow: hidden
}
.scale-image{
  width: 100%;
  position: relative
}
.pageitem{
  width: 50%;
  height: 100%;
}
.pageone{
  float: right;
}
.pagetwo{
  float: left;
}
.top-box{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 20%;
  top:20%;
  background: #000;
}
.top-box1{
  left: 40%;
  top:40%;
}
.top-box2{
  left: 60%;
  top:60%;
}
.top-box3{
  left: 80%;
  top:70%;
}
.scale-bigger{
  width: 300%;
  height: 300%;
  transition: all 1s;
}
.scale-small{
  width: 100%;
  height: 100%;
  transition: all 1s;
}
